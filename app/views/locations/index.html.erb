<div class= "page-header">

  <div class="pull-right">
  <%= link_to 'Create location', new_location_path, class: 'btn btn-info' %>
  <%= link_to 'New User', new_user_path, class: 'btn btn-info' %>

  </div>

  <h1>Locations</h1>
</div>


<br>
<br>

<table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %> </td>
        <td><%= location.address %></td>
        <td><%= location.zip_code %></td>
        <td class="text-right">
          <%= link_to 'delete', location, method: :delete, class: 'btn btn-danger' %>
          <%= link_to 'edit', edit_location_path(location), class: 'btn btn-info' %>
          <%= link_to 'create event', new_location_event_path(location), class: 'btn btn-info' %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>
